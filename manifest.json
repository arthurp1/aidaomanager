{
  "manifest_version": 3,
  "name": "AI DAO Manager",
  "version": "1.0",
  "description": "Manage your DAO tasks with AI assistance",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "background"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "dist/entrypoints/background/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "dist/entrypoints/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 